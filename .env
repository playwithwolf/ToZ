# 微信登录配置
# 请在微信开放平台申请应用后，将以下信息替换为实际值

# 微信应用ID (AppID)
WECHAT_APP_ID=your_wechat_app_id_here

# 微信应用密钥 (AppSecret)
WECHAT_APP_SECRET=your_wechat_app_secret_here

# 微信登录回调地址
# 注意：此地址需要在微信开放平台配置，且必须是https协议（生产环境）
WECHAT_REDIRECT_URI=https://your-domain.com/auth/callback

# 应用运行环境
ENVIRONMENT=development

# 应用密钥（用于session加密等）
SECRET_KEY=your_secret_key_here_please_change_this_in_production

# 数据库配置（如果需要）
# DATABASE_URL=sqlite:///./app.db

# 日志级别
LOG_LEVEL=INFO

# 跨域配置
CORS_ORIGINS=https://*.onrender.com,https://your-domain.com

# 微信API相关配置
WECHAT_API_BASE_URL=https://api.weixin.qq.com
WECHAT_OAUTH_BASE_URL=https://open.weixin.qq.com

# 会话配置
SESSION_EXPIRE_HOURS=24

# 部署相关配置
# 如果部署到render.com，可以在环境变量中设置以下值
# PORT=10000
# HOST=0.0.0.0